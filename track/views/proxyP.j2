{% extends "frame.j2" %}
{% import "partial.j2" as partial %}

{% block title %}proxyP{% endblock %}

{% block content %}
<!-- nav -->
<!-- nav -->
<div class="row">{{ partial.nav("proxyP") }}</div>
<!-- proxy-info -->
<br/>
<div class="row">
    <!-- tab-nav -->
    <div class="col-md-2">
        <ul id="tabs" class="nav nav-pills nav-stacked" role="tablist">
            {% set i = 1 %}
            {% for ip, proxy in proxies %}
            <li role="presentation"><a href="#proxy{{ i }}" aria-controls="proxy{{ i }}" role="tab" data-toggle="pill">{{ ip }}</a></li>
            {% set i = i + 1 %}
            {% endfor %}
        </ul>
    </div>
    <!-- tab-panel -->
    <div class="col-md-10">
        <div class="tab-content">
            {% set i = 1 %}
            {% for ip, proxy in proxies %}
            <div id="proxy{{ i }}" class="tab-pane" role="tabpanel">
                <!-- cache -->
                <h4>Cache</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Hit Times</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for file, times in proxy %}
                        <tr>
                            <td>{{ file }}</td>
                            <td>{{ times }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% set i = i + 1 %}
            {% endfor %}
        </div>
    </div>
</div>
<!-- clear -->
<br/>
<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <a class="btn btn-danger btn-block" href="/proxy/clear">Clear</a>
    </div>
</div>
<!-- init tab -->
<script>
$(document).ready(function()
{
    $('#tabs a').click(function (e)
    {
        e.preventDefault();
        $(this).tab('show');
    });

    $('#tabs a:first').tab('show');
});
</script>
{% endblock %}